{
	"$schema": "https://schemas.wp.org/wp/6.5/theme.json",
	"version": 2,
	"title": "Game Dev Portfolio",
	"patterns": [
		"header-mobile-only",
		"sidebar-portfolio",
		"footer-simple",
		"footer-socials",
		"text-copyrights",
		"text-skills",
		"posts-full-content"
	],
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "Raleway, BlinkMacSystemFont, -apple-system, 'Segoe UI', Roboto, Oxygen, Cantarell, 'Fira Sans', 'Droid Sans', sans-serif",
					"name": "portfolio Sans-serif",
					"slug": "portfolio-sans-serif"
				}
			]
		},
		"shadow": {
			"presets": [
				{
					"name": "Glow",
					"slug": "glow",
					"shadow": "0 .5em 1em -.125em rgba(10,10,10,.1),0 0 0 1px rgba(10,10,10,.02)"
				}
			]
		},
		"custom": {
			"max-width": "1344px",
			"grid-logo-size": "clamp(13.5rem, 20vw, calc(var(--wp--custom--max-width) * 0.2))",
			"border-radius": "calc(var(--wp--style--block-gap) / 2)"
		}
	},
	"styles": {
		"css": "hr.is-style-wide {width: 100%;}",
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--portfolio-sans-serif)"
		},
		"blocks": {
			"core/quote": {
				"border": {
					"radius": "var(--wp--custom--border-radius)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--20)",
						"right": "var(--wp--preset--spacing--20)",
						"bottom": "var(--wp--preset--spacing--20)",
						"left": "var(--wp--preset--spacing--20)"
					}
				}
			},
			"core/post-featured-image": {
				"border": {
					"radius": "var(--wp--custom--border-radius)"
				}
			},
			"core/post-comments-form": {
				"border": {
					"radius": "var(--wp--custom--border-radius)"
				}
			},
			"core/loginout": {
				"border": {
					"radius": "var(--wp--custom--border-radius)"
				}
			},
			"core/search": {
				"border": {
					"radius": "var(--wp--custom--border-radius)"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "sidebar",
			"title": "Sidebar",
			"area": "uncategorized"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "page-no-sidebar",
			"postTypes": ["page"],
			"title": "Page No Sidebar"
		}
	]
}
